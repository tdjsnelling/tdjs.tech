.ProfilePhoto
  width: 150px
  margin-bottom: 40px

.Heading
  font-family: $font--ubuntu
  font-size: 36px
  margin-bottom: 40px

.Links
  margin: 20px 0
  list-style: none

  li
    &::before
      content: '* '

    a
      text-decoration: none

      &:hover
        text-decoration: underline

  a
    color: $color--black

.Footer
  color: $color--grey

  a
    color: $color--grey !important
